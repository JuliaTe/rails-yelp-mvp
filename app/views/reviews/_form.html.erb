        <%= form_with(model: [ @restaurant, @restaurant.reviews.build ], local: true) do |form| %>
        <p>
            <%= form.label :rating %><br>
            <%= form.text_field :rating %>
        </p>
        <p>
            <%= form.label :content %><br>
            <%= form.text_area :content %>
        </p>
        <p>
            <%= form.submit %>
        </p>
        <% end %>